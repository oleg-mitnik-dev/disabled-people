<%# "build" = alias for "new" %>
<%# "books.build(attributes = {})" method returns a single array of new objects of the associated type. %>
<%= form_with model: [ @person, @person.guardians.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
