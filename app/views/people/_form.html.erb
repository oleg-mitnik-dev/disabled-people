<%= form_with model: person do |form| %>
  <p>
    <%= form.label :given_names %><br>
    <%= form.text_field :given_names %>
      <% person.errors.full_messages_for(:given_names).each do |message| %>
        <div><%= message if message.present? %></div>
    <% end %>
  </p>
  
  <p>
    <%= form.label :surname %><br>
    <%= form.text_field :surname %>
      <% person.errors.full_messages_for(:surname).each do |message| %>
        <div><%= message if message.present? %></div>
    <% end %>
  </p>
  
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
